# security
<FilesMatch "\.(html|php)$">
Header set Content-Security-Policy "default-src 'self'; style-src 'self'; script-src 'self' *.google-analytics.com *.googletagmanager.com *.cloudflare.com data:; connect-src 'self' *.google-analytics.com *.optimalworks.net data:; img-src 'self' * data:; font-src 'self' data:;"
Header set Strict-Transport-Security "max-age=63072000"
Header set X-Content-Type-Options nosniff
Header set X-Frame-Options SAMEORIGIN
Header set X-XSS-Protection "1; mode=block"
</FilesMatch>

RewriteEngine On

/* @if !devBuild */
# enforce HTTPS non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ /* @echo domain */%{REQUEST_URI} [L,NE,R=301]

# remove index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . redir.php [L]
/* @endif */
